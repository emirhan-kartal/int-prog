@model ViewModels.AdminViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <h2 class="mb-4"><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h2>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">
                        <i class="fas fa-users me-2"></i>Total Users
                    </h5>
                    <p class="card-text display-6">@Model.TotalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-success">
                        <i class="fas fa-file me-2"></i>Total Files
                    </h5>
                    <p class="card-text display-6">@Model.TotalFiles</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-warning">
                        <i class="fas fa-hdd me-2"></i>Storage Used
                    </h5>
                    <p class="card-text display-6">@Model.FormattedTotalStorage</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Users -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-4">Recent Users</h5>
            @if (!Model.RecentUsers.Any())
            {
                <p class="text-muted">No users found.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Email</th>
                                <th>Joined</th>
                                <th>Storage Used</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.RecentUsers)
                            {
                                <tr>
                                    <td>
                                        <i class="fas fa-user text-primary me-2"></i>
                                        @user.Email
                                    </td>
                                    <td>@user.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>@user.FormattedStorageUsed</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div> 