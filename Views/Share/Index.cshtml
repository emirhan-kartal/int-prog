@model SharedFileViewModel
@{
    ViewData["Title"] = "Shared File";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-4">
                    <h4 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>
                        @Model.FileName
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center mb-3 mr-3">
                                <i class="fas fa-weight-hanging text-muted me-3 fa-lg"></i>
                                <div>
                                    <small class="text-muted d-block">File Size</small>
                                    <strong>@Model.FormattedSize</strong>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center mb-3 mr-3 ">
                                <i class="fas fa-clock text-muted me-3 fa-lg"></i>
                                <div>
                                    <small class="text-muted d-block">Expires On</small>
                                    <strong>@Model.ExpiryDate.ToString("MM/dd/yyyy HH:mm")</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form asp-action="Download" method="post">
                        <input type="hidden" name="token" value="@Model.Token" />
                        <button type="submit" class="btn btn-primary btn-lg btn-block w-100">
                            <i class="fas fa-download me-2"></i>
                            Download File
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>